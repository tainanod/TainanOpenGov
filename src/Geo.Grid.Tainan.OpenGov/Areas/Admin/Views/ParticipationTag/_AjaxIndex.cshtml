@model IQueryable<Geo.Grid.Tainan.OpenGov.Entity.ViewModel.Participation.ParticipationTagVm>
@{
    Layout = null;
}

<table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <th class="col-w-2 text-center">標題</th>
        <th class="col-w-15 text-center">&nbsp;</th>
        <th class="col-w-2">&nbsp;</th>
    </tr>
    @foreach (var item in Model) 
    {
        <tr>
            <td class="text-center">@item.TagName</td>
            <td class="text-center">
                <input type="button" onclick="blockUp('@item.TagId')" class="btn btn-default btn-sm" value="升" />
                <input type="button" onclick="blockDown('@item.TagId')" class="btn btn-default btn-sm" value="降" />
            </td>
            <td class="text-center">
                <a href="@Url.Action("Edit", new { id = item.TagId })" class="btn btn-primary btn-xs">編輯</a>
                <a href="@Url.Action("Remove", new { id = item.TagId })" class="btn btn-danger btn-xs" onclick="if (!confirm('確定刪除？')) { return false;}">刪除</a>
            </td>
        </tr>
    }
</table>