@model String
@{
    IDictionary<string, object> htmlAttributes = new Dictionary<string, object>();
    htmlAttributes.Add("class", "control-label col-md-2");

    IDictionary<string, object> htmlAttributes2 = new Dictionary<string, object>();
    //浮水印
    htmlAttributes2.Add("placeholder", ViewData.ModelMetadata.Watermark);
    htmlAttributes2.Add("class", "form-control");

    string id = ViewData.ModelMetadata.PropertyName;
    bool bt = ViewData.ModelMetadata.IsRequired;
    if (bt)
    {
        htmlAttributes2.Add("aria_required", "true");
    }

    if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("style"))
    {
        htmlAttributes2.Add("style", ViewData.ModelMetadata.AdditionalValues["style"]);
    }
}

<div class="form-group">
    @Html.Label("", htmlAttributes)
    <div class="col-md-10">        
        @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue.ToString(), htmlAttributes2)
        @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
    </div>
</div>

