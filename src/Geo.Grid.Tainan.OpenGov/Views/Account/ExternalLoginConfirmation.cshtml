@model Geo.Grid.Tainan.OpenGov.Models.ExternalLoginConfirmationViewModel
<div class="share">
    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "confirmForm", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="inputbox">
            <p class="text-info">
                您已成功以 <strong>@ViewBag.LoginProvider</strong> 驗證成功。<br />
                請在下面輸入此網站的使用者名稱，然後按一下 [註冊] 按鈕完成登入。<br /><br />
            </p>
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            <a class="registration" href="javascript:document.getElementById('confirmForm').submit();">註冊</a>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
